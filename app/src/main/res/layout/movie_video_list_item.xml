<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/video_list_item_constraintlayout_paddingbottom"
    android:id="@+id/video_list_constraint_layout">

    <ImageView
        android:id="@+id/video_thumbnail_iv"
        android:layout_width="@dimen/video_thumbnail_layout_width"
        android:layout_height="@dimen/video_thumbnail_layout_height"
        android:scaleType="centerCrop"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/video_title"
        android:layout_width="@dimen/video_title_layout_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/video_title_default_margin"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/video_thumbnail_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video_thumbnail_iv"
        tools:text="Movie Trailer Title"
        android:layout_marginStart="@dimen/video_title_default_margin" />

    <ImageButton
        android:id="@+id/video_play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/video_play_button_default_margin"
        android:layout_marginLeft="@dimen/video_play_button_default_margin"
        android:layout_marginTop="@dimen/video_play_button_default_margin"
        android:layout_marginEnd="@dimen/video_play_button_default_margin"
        android:layout_marginRight="@dimen/video_play_button_default_margin"
        android:layout_marginBottom="@dimen/video_play_button_default_margin"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_outline_play_circle_outline_48"
        app:layout_constraintBottom_toBottomOf="@+id/video_thumbnail_iv"
        app:layout_constraintEnd_toEndOf="@+id/video_thumbnail_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/video_thumbnail_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>